@page "{id}"
@model PeopleGen.Web.Pages.CityDetailModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, PeopleGen
@using PeopleGen.Core
@{
    int i = 0;
    int k = 0;
}


