<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="color: rgb(129,0,12); background: rgba(78,78,78,0.3);">Cities</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Civilization c in this.Model.Cities)
                        {
                            <tr>
                                <td style="border-style: solid; border-color: #000000; color: rgb(129,0,12); background: rgba(78,78,78,0.3); "><a asp-page="/CityDetail" asp-route-id="@c.CityId"> @c.CityName</a></td>
                            </tr>

                        }
                        <tr>
                            <td>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-8">
            <div>
                <ul class="nav nav-tabs" role="tablist" style="background: rgba(78,78,78,0.3);">
                    <li class="nav-item" role="presentation"><a class="nav-link active" role="tab" data-bs-toggle="tab" href="#tab-1">City Information</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" role="tab" data-bs-toggle="tab" href="#tab-2">Civilians</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" role="tab" data-bs-toggle="tab" href="#tab-3">Business</a></li>
                </ul>
                <div class="tab-content" style="background: rgba(78,78,78,0.3);">
                    <div id="tab-1" class="tab-pane active" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><img />CityName: @Model.CityModel.CityName</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Location: @Model.CityModel.Location</td>
                                        <td>Rule Type: @Model.CityModel.TypeOfRule</td>
                                    </tr>
                                    <tr>
                                        <td>Population: @Model.CityModel.Population.Count</td>
                                        <td>Ideology</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane" role="tabpanel">
                        <nav>
                            <ul>
                                
                                @foreach (Person p in this.Model.CityModel.Population)
                                {
                                    if (i > 30)
                                    {
                                        break;
                                    }
                                    <li><a asp-page="/PersonDetail" asp-route-id="@p.PersonId">@p.FirstName @p.LastName</a></li>
                                    i++;
                                }

                                @*<div paging-model="@Model.PagingData" page-class="btn border mt-3"
             page-class-links="text-center" page-class-normal="btn btn-light" page-class-selected="btn btn-dark  active"
             page-class-label="p-2 font-weight-bold  pt-md-2  text-center" class="text-center">
        </div>*@
                                @*<li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>*@
                            </ul>
                        </nav>
                    </div>
                    <div id="tab-3" class="tab-pane" role="tabpanel">
                        @foreach (Business b in this.Model.CityModel.Businesses)
                        {
                            if (k > 30)
                            {
                                break;
                            }
                            <li><a asp-page="/BusinessDetail" asp-route-id="@b.BusinessId">@b.BusinessName</a></li>
                            k++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
